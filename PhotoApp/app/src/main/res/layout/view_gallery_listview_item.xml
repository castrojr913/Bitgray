<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/gallery_item_title"
        style="@style/AppTheme.Gallery.ListView.Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.jacr.photoapp.views.NonScrollableGridView
        android:id="@+id/gallery_item_gridview"
        style="@style/AppTheme.Gallery.ListView.GridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>