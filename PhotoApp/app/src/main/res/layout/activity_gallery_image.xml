<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_margin_vertical"
    android:paddingLeft="@dimen/activity_margin_horizontal"
    android:paddingRight="@dimen/activity_margin_horizontal"
    android:paddingTop="@dimen/activity_margin_vertical">

    <TextView
        android:id="@+id/activity_gallery_image_title"
        style="@style/AppTheme.Gallery.FullImage.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_gallery_image_location"
        style="@style/AppTheme.Gallery.FullImage.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_gallery_image_title" />

    <TextView
        android:id="@+id/activity_gallery_image_date"
        style="@style/AppTheme.Gallery.FullImage.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_gallery_image_location" />

    <ImageView
        android:id="@+id/activity_gallery_image_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_gallery_image_button"
        android:layout_below="@+id/activity_gallery_image_date"
        android:scaleType="centerCrop" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/activity_gallery_image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/activity_gallery_image_button_dismiss" />

</RelativeLayout>